# ──────────────────────────────────────────────────────────────────────────────
# AI Dashboard – Environment Variables
# Copy this file to .env and fill in values before running in production.
# ──────────────────────────────────────────────────────────────────────────────

# ── Django core ──────────────────────────────────────────────────────────────
DJANGO_ENV=production                      # debug | production
DJANGO_SECRET_KEY=replace-with-50-random-chars
DJANGO_ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com
DJANGO_DEBUG=false                         # never true in production

# ── Database (default: SQLite) ───────────────────────────────────────────────
# For SQLite (simple, single-server deployments):
# DJANGO_DB_PATH=/var/lib/ai-dashboard/db.sqlite3
#
# For PostgreSQL (recommended for multi-process / production):
# DATABASE_URL=postgres://user:pass@localhost:5432/ai_dashboard

# ── Static files ─────────────────────────────────────────────────────────────
DJANGO_STATIC_ROOT=/var/www/ai-dashboard/staticfiles

# ── HTTPS / proxy ────────────────────────────────────────────────────────────
DJANGO_SECURE_SSL_REDIRECT=true
DJANGO_SESSION_COOKIE_SECURE=true
DJANGO_CSRF_COOKIE_SECURE=true
DJANGO_SECURE_HSTS_SECONDS=31536000
DJANGO_SECURE_HSTS_INCLUDE_SUBDOMAINS=true
DJANGO_SECURE_HSTS_PRELOAD=true
DJANGO_SECURE_BEHIND_PROXY=true           # set if behind nginx/caddy/etc.
DJANGO_CSRF_TRUSTED_ORIGINS=https://yourdomain.com

# ── Google OAuth ─────────────────────────────────────────────────────────────
GOOGLE_CLIENT_ID=your-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-client-secret

# Allow specific emails or entire domains (comma-separated):
GOOGLE_ALLOWED_EMAILS=admin@yourdomain.com
GOOGLE_ALLOWED_DOMAINS=yourdomain.com

# ── Frontend ─────────────────────────────────────────────────────────────────
FRONTEND_APP_URL=https://yourdomain.com
DJANGO_SITE_ID=1

# ── Monitoring ───────────────────────────────────────────────────────────────
MONITORING_RETENTION_DAYS=14
MONITORING_DEFAULT_HISTORY_MINUTES=60
MONITORING_MAX_HISTORY_MINUTES=1440
MONITORING_DISKS=                          # comma-separated device names to track

# ── Time zone ────────────────────────────────────────────────────────────────
DJANGO_TIME_ZONE=UTC

# ── Logging ──────────────────────────────────────────────────────────────────
AI_DASHBOARD_LOG_LEVEL=info               # agent log level: debug|info|warn|error
